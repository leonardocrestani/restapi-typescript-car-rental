{
    "compilerOptions": {
        "target": "ES2020",
        "noEmitOnError": true,
        "outDir": "./dist",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "lib": ["es6"],
        "allowJs": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "resolveJsonModule": true
}